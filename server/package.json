{
  "name": "server",
  "version": "0.0.1",
  "description": "Janus NodeJS Express Server",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf \"dist\"",
    "build": "tsc && tsc-alias && echo \"JANUS_VERSION=0.0.1\nJANUS_RELEASE_DATE=$(date '+%Y-%m-%d %H:%M:%S')\" > dist/src/.env",
    "start": "export NODE_ENV=development && export debug=* && export NODE_OPTIONS=\"--max-old-space-size=8192\" && tsnd --respawn -r tsconfig-paths/register src/index.ts",
    "typeorm:dev": "export NODE_ENV=development && export ALLOW_CONFIG_MUTATIONS=true && typeorm-ts-node-commonjs",
    "typeorm:prod": "export NODE_ENV=production && export ALLOW_CONFIG_MUTATIONS=true && typeorm-ts-node-commonjs",
    "typeorm:dev:create": "npm run typeorm:dev migration:create",
    "typeorm:dev:update": "npm run typeorm:dev migration:run -- -d ./src/datasource.ts",
    "typeorm:dev:rollback": "npm run typeorm:dev migration:revert -- -d ./src/datasource.ts",
    "typeorm:prod:update": "npm run typeorm:prod migration:run -- -d ./datasource.js",
    "typeorm:prod:rollback": "npm run typeorm:prod migration:revert -- -d ./datasource.js",
    "docker:create": "docker build -t janus-express .",
    "docker:start": "docker compose up",
    "docker:nginx:ash": "docker exec -it janus_nginx ash",
    "docker:server:ash": "docker exec -it janus_server ash",
    "docker:mariadb:ash": "docker exec -it janus_mariadb ash",
    "docker:nginx:inspect": "docker inspect --format \"{{json .State.Health }}\" janus_mariadb | jq",
    "docker:server:inspect": "docker inspect --format \"{{json .State.Health }}\" janus_mariadb | jq",
    "docker:mariadb:inspect": "docker inspect --format \"{{json .State.Health }}\" janus_mariadb | jq"
  },
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "config": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.5.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.1",
    "reflect-metadata": "^0.2.2",
    "split": "^1.0.1",
    "systeminformation": "^5.27.10",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.6.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0"
  }
}
